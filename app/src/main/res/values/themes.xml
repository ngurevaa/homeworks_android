<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homeworks_android" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/beige</item>
        <item name="colorSurface">@color/beige</item>
        <item name="colorOnSurfaceVariant">@color/brown</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/beige_active</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/brown</item>
        <item name="colorPrimary">@color/brown</item>
    </style>
</resources>
